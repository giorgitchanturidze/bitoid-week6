                  fill="#5964E0" />
          </svg>
        </div>
        <input type="search" id="default-search" name="location"
               class="block p-4 pl-10 w-full text-sm border text-very_dark bg-white border-white focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-dark dark:border-dark dark:placeholder-grey dark:text-white"
               placeholder="Filter by location..." >
      </div>
      <!-- checkbox -->
      <label for="default-search2"
             class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-gray-300">Search</label>
      <div class="relative">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <input id="default-checkbox" type="checkbox" value="Full Time" name="checkbox"
                 class="w-4 h-4 accent-violet  text-violet bg-gray-100 rounded border-violet focus:outline-none focus:ring-violet dark:focus:ring-violet dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
        </div>
        <label for="default-checkbox"
               class="block p-4 pl-10 rounded-r-lg text-sm border text-very_dark bg-white border-white focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-dark dark:border-dark dark:placeholder-grey dark:text-white">Full Time Only</label>
        <button type="submit" name="submit"
                class="bg-violet hover:bg-light_violet text-white absolute right-2.5 bottom-2.5  focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-4 py-2 dark:bg-violet dark:hover:bg-light_violet">Search</button>
      </div>
    </div>
  </div>
</form>



<div class="grid lg:grid-cols-3 md:grid-cols-2 sm:grid-cols-1">
  {% for job in jobs %}


  <div

    class="  relative max-w-md mx-10 md:max-w-sm min-w-0 break-words bg-white dark:bg-very_dark w-full mb-6 shadow-lg rounded-xl mt-16">
    <div class="px-6">

      <div class="flex flex-wrap justify-start">

        <!-- image -->
        <div class=" w-full flex justify-start">
          <div class=" relative">
            <a href="/node/{{ job.nid }}">
            <img src="{{ job.thumbnail }}" class=" align-middle border-none absolute -m-6 -ml-1 lg:-ml-1 max-w-[150px]"  alt="Company logo">
              <span class="animate-ping absolute bottom-4 rounded-full h-2 w-2 bg-[#16a34a]"></span>
            </a>
          </div>
        </div>
        <div class="w-full mt-15">
          <div class="flex justify-start lg:pt-4 pt-8 pb-0">
            <div class=" p-3 text-start">
              <!-- Active hours -->
              <div class="animate-bounce text-sm text-slate-400">{{job.activity}}{{job.type}}</div>


              <!-- name and company -->
              <h3 class="text-2xl text-slate-700 dark:text-white font-bold leading-normal mb-1"><a href="http://drupal.docker.localhost:8000/node/{{ job.nid }}">{{ job.title }}</a></h3>
              <div class="text-xs mt-0 mb-2 text-slate-400 font-bold">
                <i class=" fas fa-map-marker-alt text-slate opacity-75"></i>{{ job.company }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- bio -->
    <div class="flex flex-wrap justify-center">
      <div class="w-full px-8">
        <p class="  font-light leading-relaxed text-violet mb-4">{{ job.location   }}</p>
      </div>
    </div>
  </div>
  {% endfor %}

